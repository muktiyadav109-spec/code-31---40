Q68: Delete an element from an array.

/*
Sample Test Cases:
Input 1:
5
1 2 3 4 5
2
Output 1:
1 2 4 5

*/

  #include <stdio.h>
int main()
{
    int n,p;
    printf("Enter the size: \n");
    scanf("%d", &n);
    int a[n];
    printf("Enter the elements of the array: \n");
    for(int i=0;i<n;i++)
    {
        scanf ("%d", &a[i]);
    }
    printf("Position of the element: ");
    scanf("%d", &p);
    for(int j=p+1;j<n;j++)
        a[j-1]=a[j];
    n--;
    printf("Array after deletion: \n");
    for(int i=0;i<n;i++)
    printf("%d ", a[i]);
    return 0;
}
